{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
            "label": "Norminette Formatter",
            "type": "shell",
            "command": "c_formatter_42",
            "args": [
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
		{
			"label": "Run Norminette",
			"type": "shell",
			"command": "norminette ${file}",
			"problemMatcher": {
			  "owner": "c",
			  "fileLocation": ["relative", "${workspaceFolder}"],
			  "pattern": {
				"regexp": "^([^:]+):(\\d+): (Error|Warning): (.*)$",
				"file": 1,
				"line": 2,
				"severity": 3,
				"message": 4
			  }
			},
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		}
	]
}
